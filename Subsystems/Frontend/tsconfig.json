{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "types": ["express", "jest"],
    "experimentalDecorators": true
  },
  "include": ["typings.d.ts", "src/**/*"]
}
